<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <TextView
        android:id="@+id/tvIdMahasiswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIM Mahasiswa : "
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tvNamaMahasiswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama   : "
        android:layout_below="@id/tvIdMahasiswa"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tvNomorMahasiswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Telp : "
        android:layout_below="@id/tvNamaMahasiswa"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/edtIdMahasiswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Id"
        android:layout_toRightOf="@+id/tvIdMahasiswa"
        android:layout_alignBaseline="@+id/tvIdMahasiswa"/>
    <EditText
        android:id="@+id/edtNamaMahasiwa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nama"
        android:layout_alignBaseline="@+id/tvNamaMahasiswa"
        android:layout_alignLeft="@+id/edtIdMahasiswa"/>
    <EditText
        android:id="@+id/edtNomorMahasiswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nomor"
        android:layout_alignBaseline="@+id/tvNomorMahasiswa"
        android:layout_alignLeft="@+id/edtIdMahasiswa"
        android:inputType="date"/>
    <LinearLayout
        android:id="@+id/Linearlayout2Mahasiswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tvNomorMahasiswa"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <Button
            android:id="@+id/btUpdate2Mahasiswa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:padding="16dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="0dp"
            android:letterSpacing="0.2"/>
        <Button
            android:id="@+id/btDelete2Mahasiswa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:padding="16dp"
            android:layout_margin="5dp"
            android:letterSpacing="0.2"/>
        <Button
            android:id="@+id/btBackGoMahasiswa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:padding="16dp"
            android:layout_margin="5dp"
            android:letterSpacing="0.2"/>
    </LinearLayout>
</RelativeLayout>